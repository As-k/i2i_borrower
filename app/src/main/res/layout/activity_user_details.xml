<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tile_background"
    tools:context="in.co.cioc.i2i.RegistrationCheckEligibility">

    <ScrollView
        android:id="@+id/registration_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/basic_registration_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.githang.stepview.StepView
                android:id="@+id/step_view"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:paddingTop="20dp"
                android:background="@color/colorPrimary"
                app:svTextColor="@color/white"
                app:svCircleColor="@color/white"
                app:svSelectedColor="@color/orange"/>


            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="15dp"
                android:gravity="center_horizontal"
                android:text="User details" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="163dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/bottom_border" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="20dp"
                android:text="Fathers name"
                android:textColor="@color/colorAccent"/>
            <LinearLayout
                style="@style/linear_layout_for_et"
                >

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/user_icon" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="270dp"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/firstName"
                        style="@style/edit_text_style"
                        android:hint="First Name"
                        android:inputType="textCapWords"
                        android:maxLines="1"
                        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                        android:singleLine="true"
                        />

                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/fnameErrTxt"
                style="@style/error_text_msg"/>

            <LinearLayout
                style="@style/linear_layout_for_et">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/user_icon" />


                <android.support.design.widget.TextInputLayout
                    android:layout_width="270dp"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/middleName"
                        style="@style/edit_text_style"
                        android:hint="Middle Name (Optional)"
                        android:inputType="textCapWords"
                        android:maxLines="1"
                        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                        android:singleLine="true"
                        android:backgroundTint="@android:color/transparent"
                        />

                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                style="@style/linear_layout_for_et">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/user_icon" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="270dp"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/lastName"
                        style="@style/edit_text_style"
                        android:hint="Last Name"
                        android:inputType="textCapWords"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                        />

                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/lnameErrTxt"
                style="@style/error_text_msg"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/spouseNameForm">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:text="Spouse name"
                    android:textColor="@color/colorAccent"/>
                <LinearLayout
                    style="@style/linear_layout_for_et">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/user_icon" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="270dp"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/firstNameSpouse"
                            style="@style/edit_text_style"
                            android:hint="First Name"
                            android:inputType="textCapWords"
                            android:maxLines="1"
                            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                            android:singleLine="true"
                            />

                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
                <TextView
                    android:id="@+id/fnameSpouseErrTxt"
                    style="@style/error_text_msg"/>

                <LinearLayout
                    style="@style/linear_layout_for_et">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/user_icon" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="270dp"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/middleNameSpouse"
                            style="@style/edit_text_style"
                            android:hint="Middle Name (Optional)"
                            android:inputType="textCapWords"
                            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                            android:maxLines="1"
                            android:singleLine="true"
                            />

                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    style="@style/linear_layout_for_et">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/user_icon" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="270dp"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/lastNameSpouse"
                            style="@style/edit_text_style"
                            android:hint="Last Name"
                            android:inputType="textCapWords"
                            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                            android:maxLines="1"
                            android:singleLine="true"
                            />

                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
                <TextView
                    android:id="@+id/lnameSpouseErrTxt"
                    style="@style/error_text_msg"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/noofDependentSpinner">

            <LinearLayout
                android:layout_height="38dp"
                style="@style/linear_layout_for_cb">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="center"
                    app:srcCompat="@drawable/employment_icon" />

                <LinearLayout
                    android:layout_width="270dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="Number of dependents"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/edit_text_size"/>

                    <Spinner
                        android:id="@+id/spinner"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:spinnerMode="dropdown" />
                </LinearLayout>

            </LinearLayout>
            <TextView
                android:id="@+id/noofDependentErrTxt"
                style="@style/error_text_msg"/>

            <LinearLayout
                style="@style/linear_layout_for_et"
                android:id="@+id/dependent1Layout">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="center"
                    app:srcCompat="@drawable/user_icon" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="270dp"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/dependent1"
                        style="@style/edit_text_style"
                        android:hint="Dependent 1 (Age in years)"
                        android:inputType="number"
                        android:maxLines="1"
                        android:maxLength="2"
                        android:singleLine="true"
                        />

                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/dependent1ErrTxt"
                style="@style/error_text_msg"/>

            <LinearLayout
                style="@style/linear_layout_for_et"
                android:id="@+id/dependent2Layout">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="center"
                    app:srcCompat="@drawable/user_icon" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="270dp"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/dependent2"
                        style="@style/edit_text_style"
                        android:hint="Dependent 2 (Age in years)"
                        android:inputType="number"
                        android:maxLines="1"
                        android:maxLength="2"
                        android:singleLine="true"
                        />

                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/dependent2ErrTxt"
                style="@style/error_text_msg"/>
            <LinearLayout
                style="@style/linear_layout_for_et"
                android:id="@+id/dependent3Layout">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="center"
                    app:srcCompat="@drawable/user_icon" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="270dp"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/dependent3"
                        style="@style/edit_text_style"
                        android:hint="Dependent 3 (Age in years)"
                        android:inputType="number"
                        android:maxLines="1"
                        android:maxLength="2"
                        android:singleLine="true"
                        />

                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/dependent3ErrTxt"
                style="@style/error_text_msg"/>

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="Permanent address" />


            <ImageView
                android:layout_width="218dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/bottom_border2" />


            <LinearLayout
                style="@style/linear_layout_for_et">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="center"
                    app:srcCompat="@drawable/address_icon" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="270dp"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/permanentAddress"
                        style="@style/edit_text_style"
                        android:hint="Address"
                        android:inputType="text"
                        android:maxLines="1"
                        android:singleLine="true"
                        />

                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/pAddressErrTxt"
                style="@style/error_text_msg"/>

            <LinearLayout
                style="@style/linear_layout_for_et">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="center"
                    app:srcCompat="@drawable/location_icon" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="270dp"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/permanentPincode"
                        style="@style/edit_text_style"
                        android:hint="Pincode"
                        android:inputType="number"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:maxLength="6"
                        />

                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/pPincodeErrTxt"
                style="@style/error_text_msg"/>

            <LinearLayout
                style="@style/linear_layout_for_et">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="center"
                    app:srcCompat="@drawable/city_icon" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="270dp"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/permanentCity"
                        style="@style/edit_text_style"
                        android:hint="City"
                        android:inputType="text"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        />

                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/pCityErrTxt"
                style="@style/error_text_msg"/>

            <LinearLayout
                style="@style/linear_layout_for_et">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="center"
                    app:srcCompat="@drawable/state_icon" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="270dp"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/permanentState"
                        style="@style/edit_text_style"
                        android:hint="State"
                        android:inputType="text"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        />

                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/pStateErrTxt"
                style="@style/error_text_msg"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="Current address" />


            <ImageView
                android:layout_width="218dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/bottom_border2" />


            <LinearLayout
                style="@style/linear_layout_for_cb">


                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="20dp"
                    android:id="@+id/sameAsPerm"
                    android:text="Current Address if same as Permanent Address"
                    android:textSize="@dimen/edit_text_size"/>

            </LinearLayout>

            <TextView
                android:id="@+id/currentCBErrTxt"
                style="@style/error_text_msg"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/localAddressForm">
                <LinearLayout
                    style="@style/linear_layout_for_et">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:scaleType="center"
                        app:srcCompat="@drawable/address_icon" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="270dp"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/currentAddress"
                            style="@style/edit_text_style"
                            android:hint="Address"
                            android:inputType="text"
                            android:maxLines="1"
                            android:singleLine="true"
                            />

                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
                <TextView
                    android:id="@+id/cAddressErrTxt"
                    style="@style/error_text_msg"/>

                <LinearLayout
                    style="@style/linear_layout_for_et">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:scaleType="center"
                        app:srcCompat="@drawable/location_icon" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="270dp"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/currentPincode"
                            style="@style/edit_text_style"
                            android:hint="Pincode"
                            android:inputType="number"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:maxLength="6"
                            />

                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
                <TextView
                    android:id="@+id/cPincodeErrTxt"
                    style="@style/error_text_msg"/>

                <LinearLayout
                    style="@style/linear_layout_for_et">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:scaleType="center"
                        app:srcCompat="@drawable/city_icon" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="270dp"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/currentCity"
                            style="@style/edit_text_style"
                            android:hint="City"
                            android:inputType="text"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            />

                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
                <TextView
                    android:id="@+id/cCityErrTxt"
                    style="@style/error_text_msg"/>

                <LinearLayout
                    style="@style/linear_layout_for_et">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:scaleType="center"
                        app:srcCompat="@drawable/state_icon" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="270dp"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/currentState"
                            style="@style/edit_text_style"
                            android:hint="State"
                            android:inputType="text"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            />

                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
                <TextView
                    android:id="@+id/cStateErrTxt"
                    style="@style/error_text_msg"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:padding="15dp">

                <Button
                    android:id="@+id/save_button"
                    style="?android:textAppearanceSmall"
                    android:layout_width="139dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/roundbutton_green"
                    android:text="Save"
                    android:textAllCaps="false"
                    android:textColor="#ffffff"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/next_button"
                    style="?android:textAppearanceSmall"
                    android:layout_width="139dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:background="@drawable/roundbutton_blue"
                    android:text="Next"
                    android:textAllCaps="false"
                    android:textColor="#ffffff"
                    android:textStyle="bold" />
            </LinearLayout>


        </LinearLayout>


    </ScrollView>

</android.support.constraint.ConstraintLayout>
