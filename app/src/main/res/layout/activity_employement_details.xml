<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tile_background"
    tools:context="in.co.cioc.i2i.EmployementDetails">

    <ScrollView
        android:id="@+id/registration_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/basic_registration_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.githang.stepview.StepView
                android:id="@+id/step_view"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:paddingTop="20dp"
                android:background="@android:color/white"
                app:svSelectedColor="@color/orange"/>


            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:text="Employment Details" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="163dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/bottom_border" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/salariedForm">

                <LinearLayout
                    style="@style/linear_layout_for_et">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:scaleType="center"
                        app:srcCompat="@drawable/company_icon" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="270dp"
                        android:layout_height="wrap_content">

                        <AutoCompleteTextView
                            android:id="@+id/designation"
                            style="@style/edit_text_style"
                            android:hint="Designation"
                            android:inputType="text"
                            android:maxLines="1"
                            android:singleLine="true"
                            />

                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
                <TextView
                    android:id="@+id/designationErrTxt"
                    style="@style/error_text_msg"/>

                <LinearLayout
                    style="@style/linear_layout_for_et">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:scaleType="center"
                        app:srcCompat="@drawable/email_icon" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="270dp"
                        android:layout_height="wrap_content">

                        <AutoCompleteTextView
                            android:id="@+id/officialEmail"
                            style="@style/edit_text_style"
                            android:hint="Official E-mail id (optional)"
                            android:inputType="textEmailAddress"
                            android:maxLines="1"
                            android:singleLine="true"
                            />

                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
                <TextView
                    android:id="@+id/selfEmailErrTxt"
                    style="@style/error_text_msg"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/businessForm">

                <LinearLayout
                    style="@style/linear_layout_for_et">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:scaleType="center"
                        app:srcCompat="@drawable/company_icon" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="270dp"
                        android:layout_height="wrap_content">

                        <AutoCompleteTextView
                            android:id="@+id/businessFormName"
                            style="@style/edit_text_style"
                            android:hint="Business Name"
                            android:inputType="text"
                            android:maxLines="1"
                            android:singleLine="true"
                            />

                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
                <TextView
                    android:id="@+id/bnameErrTxt"
                    style="@style/error_text_msg"/>

                <!--<LinearLayout-->
